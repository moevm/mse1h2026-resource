{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Library Node",
  "description": "A software library or dependency",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Global URN identifier (e.g., urn:service:payment-api)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the resource"
    },
    "tags": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Key-value pairs for labels/tags"
    },
    "environment": {
      "type": "string",
      "enum": [
        "production",
        "staging",
        "development",
        "testing"
      ],
      "description": "Deployment environment"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the resource was first discovered"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the resource was last updated"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "degraded",
        "offline",
        "unknown"
      ],
      "description": "Current operational status"
    },
    "type": {
      "type": "string",
      "const": "Library"
    },
    "package_manager": {
      "type": "string",
      "examples": [
        "npm",
        "maven",
        "pip",
        "gomod"
      ]
    },
    "version": {
      "type": "string"
    },
    "license": {
      "type": "string",
      "examples": [
        "MIT",
        "Apache-2.0",
        "GPL-3.0"
      ]
    },
    "cve_count": {
      "type": "integer",
      "description": "Number of known vulnerabilities"
    },
    "is_internal": {
      "type": "boolean",
      "description": "True if developed in-house"
    },
    "repository": {
      "type": "string",
      "format": "uri"
    },
    "author": {
      "type": "string"
    },
    "deprecated": {
      "type": "boolean"
    }
  },
  "required": [
    "id",
    "type",
    "name"
  ],
  "additionalProperties": true
}