{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SecretConfig Node",
  "description": "A secret or configuration store/item",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Global URN identifier (e.g., urn:service:payment-api)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the resource"
    },
    "tags": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Key-value pairs for labels/tags"
    },
    "environment": {
      "type": "string",
      "enum": [
        "production",
        "staging",
        "development",
        "testing"
      ],
      "description": "Deployment environment"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the resource was first discovered"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the resource was last updated"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "degraded",
        "offline",
        "unknown"
      ],
      "description": "Current operational status"
    },
    "type": {
      "type": "string",
      "const": "SecretConfig"
    },
    "provider": {
      "type": "string",
      "examples": [
        "hashicorp_vault",
        "aws_secrets_manager",
        "k8s_secret"
      ]
    },
    "key_names": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of keys (without values)"
    },
    "rotation_interval_days": {
      "type": "integer"
    },
    "last_rotated": {
      "type": "string",
      "format": "date-time"
    },
    "is_encrypted": {
      "type": "boolean"
    },
    "algorithm": {
      "type": "string",
      "examples": [
        "aes-256-gcm",
        "rsa-2048"
      ]
    },
    "vault_path": {
      "type": "string"
    },
    "expiration_date": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "type",
    "name"
  ],
  "additionalProperties": true
}