{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Endpoint Node",
  "description": "An API endpoint exposed by a Service",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Global URN identifier (e.g., urn:service:payment-api)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the resource"
    },
    "tags": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Key-value pairs for labels/tags"
    },
    "environment": {
      "type": "string",
      "enum": [
        "production",
        "staging",
        "development",
        "testing"
      ],
      "description": "Deployment environment"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the resource was first discovered"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the resource was last updated"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "degraded",
        "offline",
        "unknown"
      ],
      "description": "Current operational status"
    },
    "type": {
      "type": "string",
      "const": "Endpoint"
    },
    "path": {
      "type": "string",
      "description": "URL path (e.g., /api/v1/users)"
    },
    "method": {
      "type": "string",
      "enum": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH",
        "OPTIONS",
        "GRPC",
        "GRAPHQL"
      ]
    },
    "rps_limit": {
      "type": "number",
      "description": "Rate limit in requests per second"
    },
    "timeout_ms": {
      "type": "integer",
      "description": "Endpoint timeout in milliseconds"
    },
    "is_public": {
      "type": "boolean",
      "description": "True if exposed to the internet"
    },
    "payload_format": {
      "type": "string",
      "enum": [
        "json",
        "xml",
        "protobuf",
        "text"
      ]
    },
    "openapi_spec_url": {
      "type": "string",
      "format": "uri"
    },
    "auth_required": {
      "type": "boolean"
    },
    "deprecated": {
      "type": "boolean"
    }
  },
  "required": [
    "id",
    "type",
    "name"
  ],
  "additionalProperties": true
}