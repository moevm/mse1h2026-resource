{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cache Node",
  "description": "A caching instance or cluster",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Global URN identifier (e.g., urn:service:payment-api)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the resource"
    },
    "tags": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Key-value pairs for labels/tags"
    },
    "environment": {
      "type": "string",
      "enum": [
        "production",
        "staging",
        "development",
        "testing"
      ],
      "description": "Deployment environment"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the resource was first discovered"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the resource was last updated"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "degraded",
        "offline",
        "unknown"
      ],
      "description": "Current operational status"
    },
    "type": {
      "type": "string",
      "const": "Cache"
    },
    "engine": {
      "type": "string",
      "examples": [
        "redis",
        "memcached"
      ]
    },
    "eviction_policy": {
      "type": "string",
      "examples": [
        "allkeys-lru",
        "volatile-ttl"
      ]
    },
    "max_memory_mb": {
      "type": "integer"
    },
    "hit_rate_target": {
      "type": "number",
      "description": "Target hit rate percentage (0-100)"
    },
    "keys_count": {
      "type": "integer"
    },
    "connected_clients": {
      "type": "integer"
    },
    "uptime_days": {
      "type": "number"
    }
  },
  "required": [
    "id",
    "type",
    "name"
  ],
  "additionalProperties": true
}