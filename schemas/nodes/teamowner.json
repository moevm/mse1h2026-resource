{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TeamOwner Node",
  "description": "A team or individual owning resources",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Global URN identifier (e.g., urn:service:payment-api)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the resource"
    },
    "tags": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Key-value pairs for labels/tags"
    },
    "environment": {
      "type": "string",
      "enum": [
        "production",
        "staging",
        "development",
        "testing"
      ],
      "description": "Deployment environment"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the resource was first discovered"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the resource was last updated"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "degraded",
        "offline",
        "unknown"
      ],
      "description": "Current operational status"
    },
    "type": {
      "type": "string",
      "const": "TeamOwner"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "slack_channel": {
      "type": "string"
    },
    "pagerduty_service": {
      "type": "string"
    },
    "lead_name": {
      "type": "string"
    },
    "department": {
      "type": "string"
    },
    "cost_center": {
      "type": "string"
    },
    "on_call_schedule": {
      "type": "string",
      "format": "uri"
    }
  },
  "required": [
    "id",
    "type",
    "name"
  ],
  "additionalProperties": true
}