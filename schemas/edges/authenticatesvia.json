{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "authenticatesvia Edge",
  "description": "Authentication mechanism used by a service or endpoint",
  "type": "object",
  "properties": {
    "source_id": {
      "type": "string",
      "description": "URN of the source node"
    },
    "target_id": {
      "type": "string",
      "description": "URN of the target node"
    },
    "first_seen": {
      "type": "string",
      "format": "date-time",
      "description": "When the relationship was first detected"
    },
    "last_seen": {
      "type": "string",
      "format": "date-time",
      "description": "When the relationship was last detected"
    },
    "weight": {
      "type": "number",
      "description": "Importance or frequency weight of the edge (e.g., for graph layout algorithms)"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "stale",
        "deleted"
      ],
      "description": "Status of the relationship"
    },
    "type": {
      "type": "string",
      "const": "authenticatesvia"
    },
    "auth_method": {
      "type": "string",
      "examples": [
        "jwt",
        "mtls",
        "basic",
        "oauth2",
        "saml"
      ]
    },
    "token_expiry_seconds": {
      "type": "integer"
    },
    "scopes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "mfa_required": {
      "type": "boolean"
    },
    "issuer": {
      "type": "string",
      "format": "uri"
    }
  },
  "required": [
    "source_id",
    "target_id",
    "type"
  ],
  "additionalProperties": true
}