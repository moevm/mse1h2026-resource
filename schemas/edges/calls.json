{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "calls Edge",
  "description": "Synchronous API or RPC call between services/endpoints",
  "type": "object",
  "properties": {
    "source_id": {
      "type": "string",
      "description": "URN of the source node"
    },
    "target_id": {
      "type": "string",
      "description": "URN of the target node"
    },
    "first_seen": {
      "type": "string",
      "format": "date-time",
      "description": "When the relationship was first detected"
    },
    "last_seen": {
      "type": "string",
      "format": "date-time",
      "description": "When the relationship was last detected"
    },
    "weight": {
      "type": "number",
      "description": "Importance or frequency weight of the edge (e.g., for graph layout algorithms)"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "stale",
        "deleted"
      ],
      "description": "Status of the relationship"
    },
    "type": {
      "type": "string",
      "const": "calls"
    },
    "protocol": {
      "type": "string",
      "examples": [
        "http",
        "grpc",
        "thrift",
        "tcp"
      ]
    },
    "rps": {
      "type": "number",
      "description": "Requests per second"
    },
    "latency_p99_ms": {
      "type": "number"
    },
    "error_rate_percent": {
      "type": "number"
    },
    "timeout_ms": {
      "type": "integer"
    },
    "retry_count": {
      "type": "integer"
    },
    "circuit_breaker_enabled": {
      "type": "boolean"
    },
    "payload_size_bytes": {
      "type": "integer"
    }
  },
  "required": [
    "source_id",
    "target_id",
    "type"
  ],
  "additionalProperties": true
}