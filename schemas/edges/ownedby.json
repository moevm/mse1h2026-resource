{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ownedby Edge",
  "description": "Ownership relationship (e.g., Service owned by Team)",
  "type": "object",
  "properties": {
    "source_id": {
      "type": "string",
      "description": "URN of the source node"
    },
    "target_id": {
      "type": "string",
      "description": "URN of the target node"
    },
    "first_seen": {
      "type": "string",
      "format": "date-time",
      "description": "When the relationship was first detected"
    },
    "last_seen": {
      "type": "string",
      "format": "date-time",
      "description": "When the relationship was last detected"
    },
    "weight": {
      "type": "number",
      "description": "Importance or frequency weight of the edge (e.g., for graph layout algorithms)"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "stale",
        "deleted"
      ],
      "description": "Status of the relationship"
    },
    "type": {
      "type": "string",
      "const": "ownedby"
    },
    "ownership_type": {
      "type": "string",
      "enum": [
        "primary",
        "secondary",
        "stakeholder"
      ]
    },
    "escalation_policy": {
      "type": "string"
    },
    "review_frequency_days": {
      "type": "integer"
    },
    "last_reviewed_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "source_id",
    "target_id",
    "type"
  ],
  "additionalProperties": true
}