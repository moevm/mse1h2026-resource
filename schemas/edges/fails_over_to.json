{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "fails_over_to Edge",
  "description": "Failover or disaster recovery relationship",
  "type": "object",
  "properties": {
    "source_id": {
      "type": "string",
      "description": "URN of the source node"
    },
    "target_id": {
      "type": "string",
      "description": "URN of the target node"
    },
    "first_seen": {
      "type": "string",
      "format": "date-time",
      "description": "When the relationship was first detected"
    },
    "last_seen": {
      "type": "string",
      "format": "date-time",
      "description": "When the relationship was last detected"
    },
    "weight": {
      "type": "number",
      "description": "Importance or frequency weight of the edge (e.g., for graph layout algorithms)"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "stale",
        "deleted"
      ],
      "description": "Status of the relationship"
    },
    "type": {
      "type": "string",
      "const": "fails_over_to"
    },
    "trigger_condition": {
      "type": "string",
      "examples": [
        "timeout",
        "5xx_errors",
        "manual"
      ]
    },
    "failover_latency_ms": {
      "type": "integer"
    },
    "is_active_active": {
      "type": "boolean"
    },
    "data_loss_acceptable": {
      "type": "boolean"
    },
    "last_tested_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "source_id",
    "target_id",
    "type"
  ],
  "additionalProperties": true
}